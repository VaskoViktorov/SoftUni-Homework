@model SearchViewModel
@{
    ViewData["Title"] = $"Search Results For {Model.SearchText}";
}

<h2>@ViewData["Title"]</h2>

@if (Model.Courses.Any())
{
    <h3>Found courses</h3>

    <div class="row">
        @Html.Partial("_CourseListingsPartial", Model.Courses)
    </div>
}
else
{
    <h3>No courses found.</h3>
}
<br/>
@if (Model.Users.Any())
{
    <h3>Found users</h3>
    <ul>
        @foreach (var user in Model.Users)
        {
            <li><a asp-controller="Users" asp-action="Profile" asp-route-username="@user.UserName">@user.Name -@user.Courses Courses</a></li>
        }
    </ul>
}
else
{
    <h3>No users found.</h3>
}

