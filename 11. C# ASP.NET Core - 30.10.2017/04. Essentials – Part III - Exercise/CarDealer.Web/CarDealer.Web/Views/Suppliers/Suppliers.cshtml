@model SupplierListingModel

@{
    ViewData["Title"] = $"{Model.Type} Suppliers";
}

<h2>@ViewData["Title"]</h2>

    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Name
                </th>
                <th>
                    Total parts
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var supplier in Model.Suppliers)
        {
            <tr>
                <td>
                    @supplier.Id
                </td>
                <td>
                    @supplier.Name
                </td>
                <td>
                    @supplier.TotalParts
                </td>
                <td>
                    <a class="btn btn-warning btn-sm" href="/suppliers/edit/@supplier.Id">Edit</a>
                    <a class="btn btn-danger  btn-sm" href="/suppliers/delete/@supplier.Id">Delete</a>
                </td>
            </tr>

        }

        </tbody>
    </table>
