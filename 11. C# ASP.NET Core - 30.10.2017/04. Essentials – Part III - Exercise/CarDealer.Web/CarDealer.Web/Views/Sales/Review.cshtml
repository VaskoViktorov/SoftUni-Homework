@model ReviewFormModel

@{
    ViewData["Title"] = "Add Sale";
}
<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="CustomerName"></label>
                <input asp-for="CustomerName" disabled class="form-control">
                <span asp-validation-for="CustomerName" class="form-text text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarName"></label>
                <input asp-for="CarName" disabled class="form-control">
                <span asp-validation-for="CarName" class="form-text text-danger"></span>
            </div>
            @{
                if (Model.IsYoungDriver)
                {
                    <div class="form-group">
                        <label asp-for="Discount"></label>
                        <input asp-for="Discount" disabled class="form-control" value="@(Model.Discount*100)% (+5%)">
                        <span asp-validation-for="Discount" class="form-text text-danger"></span>
                    </div>
                }
                else
                {
                    <div class="form-group">
                        <label asp-for="Discount"></label>
                        <input asp-for="Discount" disabled class="form-control" value="@(Model.Discount*100)%">
                        <span asp-validation-for="Discount" class="form-text text-danger"></span>
                    </div>
                }}
            
            <div class="form-group">
                <label asp-for="CarPrice"></label>
                <input asp-for="CarPrice"  disabled class="form-control" value="@Model.CarPrice.ToPrice()">
                <span asp-validation-for="CarPrice" class="form-text text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FinalCarPrice"></label>
                <input asp-for="FinalCarPrice" disabled class="form-control" value="@Model.FinalCarPrice.ToPrice()">
                <span asp-validation-for="FinalCarPrice" class="form-text text-danger"></span>
            </div>
            <div>
                <input type="submit" class="btn btn-success" value="Finalize" />
                <a class="btn btn-sm btn-default" href="/sales/create">Cancel</a>
            </div>
        </form>
    </div>
</div>
